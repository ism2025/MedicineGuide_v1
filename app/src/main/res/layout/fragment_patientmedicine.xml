<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.PatientFragments.PatientMedicineFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/iv_drugphoto"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/futils_ic_perm_scan_wifi"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_medicinename"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Medicine Name"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_drugphoto"
            app:layout_constraintStart_toEndOf="@+id/iv_drugphoto"
            app:layout_constraintTop_toTopOf="@+id/iv_drugphoto" />

        <TextView
            android:id="@+id/tv_drugquantity"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Drug Time"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_medicinename"
            app:layout_constraintStart_toEndOf="@+id/tv_medicinename"
            app:layout_constraintTop_toTopOf="@+id/tv_medicinename" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Status"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_drugquantity"
            app:layout_constraintStart_toEndOf="@+id/tv_drugquantity"
            app:layout_constraintTop_toTopOf="@+id/tv_drugquantity" />


    </android.support.constraint.ConstraintLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_patientmedicine"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

    </android.support.v7.widget.RecyclerView>

</android.support.constraint.ConstraintLayout>